<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:linksClickable="true"
        android:text="@string/contact"
        android:gravity="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtContact"
        android:layout_centerHorizontal="true"
        android:text="@string/emailus" />

    <TextView
        android:id="@+id/txtFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:autoLink="web"
        android:linksClickable="true"
        android:text="@string/Facebook"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtTwitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtFacebook"
        android:layout_below="@+id/txtFacebook"
        android:layout_marginTop="30dp"
        android:autoLink="web"
        android:linksClickable="true"
        android:textSize="14sp"
        android:text="@string/Twitter" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button1"
        android:layout_toLeftOf="@+id/button1"
        android:alpha="1"
        android:autoLink="web"
        android:background="@null"
        android:linksClickable="true"
        android:maxHeight="64dp"
        android:maxWidth="64dp"
        android:minHeight="64dp"
        android:minWidth="64dp"
        android:onClick="@string/Twitter"
        android:src="@drawable/twittericonsmall" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtFacebook"
        android:layout_alignTop="@+id/button1"
        android:autoLink="web"
        android:background="@null"
        android:linksClickable="true"
        android:minHeight="64dp"
        android:minWidth="64dp"
        android:onClick="@string/Facebook"
        android:src="@drawable/facebookiconsmall" />

</RelativeLayout>
