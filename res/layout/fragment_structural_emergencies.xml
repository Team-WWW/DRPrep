<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/pick"
        android:textSize="24sp"
        android:typeface="sans" />

    <Button
        android:id="@+id/btnPoweroutage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/poweroutage"/>

    <Button
        android:id="@+id/btnGasLeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnPoweroutage"
        android:layout_alignBottom="@+id/btnPoweroutage"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gas_leak"/>

    <Button
        android:id="@+id/btnCo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnGasLeak"
        android:layout_alignBottom="@+id/btnGasLeak"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/co"/>

    <Button
        android:id="@+id/btnCarCrash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnThunderstorm"
        android:layout_alignBottom="@+id/btnThunderstorm"
        android:layout_alignLeft="@+id/btnGasLeak"
        android:background="@drawable/car_crash"/>

    <Button
        android:id="@+id/btnTornado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnCarCrash"
        android:layout_alignLeft="@+id/btnCo"
        android:background="@drawable/disaster_insect_infestation"/>

    <Button
        android:id="@+id/btnHeatwave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnCarCrash"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="64dp"
        android:background="@drawable/terrorist_attack" />

    <Button
        android:id="@+id/btnThunderstorm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnPoweroutage"
        android:layout_centerVertical="true"
        android:background="@drawable/explosion_icon" />

    <TextView
        android:id="@+id/txtWildfire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnPoweroutage"
        android:layout_below="@+id/btnPoweroutage"
        android:layout_marginTop="22dp"
        android:text="TextView" />
    
    <TextView
        android:id="@+id/txtEarthquake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtWildfire"
        android:layout_alignBottom="@+id/txtWildfire"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtFlood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtEarthquake"
        android:layout_alignBottom="@+id/txtEarthquake"
        android:layout_alignRight="@+id/btnCo"
        android:text="TextView" />


    <TextView
        android:id="@+id/txtThunderstorm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnThunderstorm"
        android:layout_below="@+id/btnThunderstorm"
        android:layout_marginTop="30dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtHurricane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtThunderstorm"
        android:layout_alignBottom="@+id/txtThunderstorm"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtTornado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtHurricane"
        android:layout_alignBottom="@+id/txtHurricane"
        android:layout_alignRight="@+id/btnTornado"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtHeatwave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

</RelativeLayout>
